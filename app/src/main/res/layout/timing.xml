<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TA"
            android:layout_gravity="center_vertical"
            android:id="@+id/TALabel"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingLeft="10sp"/>

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/TASpinner"
            android:textSize="20sp"
            android:layout_span="3" />

    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/TeamLabel"
                android:layout_column="0"
                android:paddingLeft="10sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TeamSpinner"
                android:textSize="16sp"
                android:layout_column="1"
                android:layout_span="3"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPs"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/CPLabel"
                android:paddingLeft="10sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CPSpinner"
                android:textSize="20sp"
                android:layout_span="3"
                android:layout_column="1" />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time In"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/CheckInLabel"
                android:paddingLeft="10sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/checkInImage"
                android:layout_column="1"
                android:src="@drawable/checkin"
                android:paddingRight="25dp"
                android:layout_gravity="bottom"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
                android:textSize="16sp"
                android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:id="@+id/CheckInTime"

                android:layout_span="2"/>/>



        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Out"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/CheckOutLabel"
                android:paddingLeft="10sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/checkOutImage"
                android:layout_column="1"
                android:src="@drawable/checkout"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/CheckOutTime"

                android:layout_span="2"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/NotesLabel"
                android:paddingLeft="10sp"
                android:paddingTop="30dp"
                android:paddingRight="10sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editNotes"
                android:layout_column="1"
                android:layout_span="3"
                android:paddingTop="30dp"
                android:textColor="#000000"/>

        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:paddingTop="20dp"
        android:layout_gravity="center" />


</LinearLayout>